---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

// Coge todos los landscapes
const allLandscapes = await getCollection('landscapes');
const featured = allLandscapes
  .filter(l => l.data.featured)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const recent = allLandscapes
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 8); // 8 últimos paisajes
---

<BaseLayout title="Julio Martelo • Landscape Photographer">
  <!-- Hero con tu foto y título -->
  <section class="relative h-screen flex items-center justify-center bg-black">
    <img 
      src="https://res.cloudinary.com/dmzjvfa0p/image/upload/w_1920,h_1080,c_fill,g_auto,q_auto:good,f_auto/v1764071578/DSC05553_s8kvuo.jpg" 
      alt="Portfolio – Landscape Photography" 
      class="absolute inset-0 w-full h-full object-cover opacity-75"
    />
    <div class="relative text-center text-white z-10 px-6">
      <h1 class="text-5xl md:text-7xl font-bold mb-4">Tu Nombre</h1>
      <p class="text-2xl md:text-4xl">Landscape & Nature Photographer</p>
      <a href="/landscapes" class="mt-10 inline-block bg-white text-black px-8 py-4 rounded-full text-lg font-medium hover:bg-gray-200 transition">
        Ver galería
      </a>
    </div>
  </section>

  <!-- Destacados -->
  {featured.length > 0 && (
    <section class="max-w-7xl mx-auto px-6 py-20">
      <h2 class="text-4xl md:text-5xl font-bold text-center mb-16">Featured Landscapes</h2>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-10">
        {featured.map(item => (
          <a href={`/landscapes/${item.slug}`} class="group">
            <img 
              src={item.data.heroImage} 
              alt={item.data.title} 
              class="w-full h-96 object-cover rounded-xl shadow-2xl group-hover:scale-[1.02] transition duration-500"
            />
            <h3 class="mt-6 text-2xl font-semibold">{item.data.title}</h3>
            <p class="text-gray-600">{item.data.location}</p>
          </a>
        ))}
      </div>
    </section>
  )}

  <!-- Últimos paisajes -->
  <section class="bg-gray-100 py-20">
    <div class="max-w-7xl mx-auto px-6">
      <h2 class="text-4xl md:text-5xl font-bold text-center mb-16">Latest Work</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        {recent.map(item => (
          <a href={`/landscapes/${item.slug}`} class="group block">
            <img 
              src={item.data.thumbnail || item.data.heroImage} 
              alt={item.data.title} 
              class="w-full h-64 object-cover rounded-lg shadow-md group-hover:shadow-2xl transition"
            />
            <p class="mt-3 text-center text-sm font-medium">{item.data.title}</p>
          </a>
        ))}
      </div>
      <div class="text-center mt-12">
        <a href="/landscapes" class="text-xl underline hover:no-underline">
          Ver toda la galería →
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
