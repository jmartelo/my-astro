---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const landscapes = await getCollection('landscapes');
  return landscapes.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<BaseLayout title={`${entry.data.title} • Julio Martelo`}>
  <article class="max-w-5xl mx-auto px-6 py-16">
    <div class="relative mb-12 overflow-hidden rounded-xl">
      <img
        src={entry.data.heroImage}
        alt={entry.data.title}
        width="2400"
        height="1600"
        loading="eager"
        class="w-full max-h-screen object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
    </div>

    <header class="text-center -mt-32 relative z-10 mb-16 px-6">
      <h1 class="text-5xl md:text-6xl font-bold text-white drop-shadow-lg mb-4">
        {entry.data.title}
      </h1>
      <p class="text-2xl text-white/90 drop-shadow">{entry.data.location}</p>
    </header>

    <div class="prose prose-lg max-w-none mx-auto text-gray-700 mb-12">
      <Content />
    </div>

    <div class="text-center">
      <a href="/landscapes" class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-800 underline text-lg">
        ← Volver a la galería
      </a>
    </div>
  </article>
</BaseLayout>
