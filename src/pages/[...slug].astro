---
import { getCollection, getEntry } from 'astro:content';
import { Image } from 'astro:assets';
import BaseLayout from '@/layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const landscapes = await getCollection('landscapes');
  return landscapes.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<BaseLayout title={entry.data.title}>
  <article class="max-w-4xl mx-auto px-6 py-16">
    <!-- Hero con la foto grande -->
    <div class="relative mb-8">
      <Image 
        src={entry.data.heroImage} 
        alt={entry.data.title} 
        class="w-full h-[70vh] object-cover rounded-xl shadow-2xl"
      />
      <div class="absolute inset-0 bg-black bg-opacity-20 rounded-xl"></div>
    </div>

    <!-- Detalles -->
    <header class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">{entry.data.title}</h1>
      <p class="text-2xl text-gray-600 mb-2">{entry.data.description}</p>
      <div class="flex flex-wrap justify-center gap-4 text-sm text-gray-500 mb-8">
        <span>ğŸ“ {entry.data.location}</span>
        <span>ğŸ“· {entry.data.camera}</span>
        <span>ğŸ“… {entry.data.pubDate.toLocaleDateString('es-ES')}</span>
      </div>
    </header>

    <!-- Contenido descriptivo -->
    <div class="prose prose-lg max-w-none mb-12">
      <Content />
    </div>

    <!-- Tags -->
    {entry.data.tags && (
      <div class="flex flex-wrap gap-2 justify-center mb-12">
        {entry.data.tags.map(tag => (
          <span class="px-3 py-1 bg-gray-200 rounded-full text-sm">#{tag}</span>
        ))}
